---
import Modal from "../utils/Modal.astro";

export interface Props {
    title: string,
    text: string,
    date: string,
    images: string[],
}

const {
    title = '',
    text = '',
    date = '',
    images= [],
} = Astro.props;
---

<style xmlns="http://www.w3.org/1999/xhtml">
    .timeline-card {
        display: flex;
        gap: 6em;
        justify-content: space-between;
    }

    .timeline-card div {
        display: flex;
        justify-content: flex-start;
        flex-direction: column;
    }

    h2 {
        margin: 0;
    }

    p {
        color: var(--text-secondary);
        width: max-content;
        margin: 0;
    }

</style>

<div class="timeline timeline-card">
    <div>
        <h2>{title}</h2>
        <p>{text}</p>
        <span>
        {images.map( i => <img src={i} width="32" height="32" alt=""/>)}
            </span>
    </div>
    <div style="justify-content: space-between">
        <small>{date}</small>
        <Modal />
    </div>
</div>
